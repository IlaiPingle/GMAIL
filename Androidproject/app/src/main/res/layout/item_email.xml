<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:background="@color/md_theme_light_surface">

    <TextView
        android:id="@+id/textSenderInitial"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:background="@color/chip_background"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="@color/md_theme_light_onPrimary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgStar"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="8dp"
        android:src="@android:drawable/btn_star_big_off"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textSender"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textStyle="bold"
        android:textColor="@color/md_theme_light_onSurface"
        app:layout_constraintEnd_toStartOf="@+id/textTime"
        app:layout_constraintStart_toEndOf="@+id/textSenderInitial"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textSubject"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textStyle="bold"
        android:textColor="@color/md_theme_light_onSurface"
        app:layout_constraintEnd_toStartOf="@+id/imgStar"
        app:layout_constraintStart_toEndOf="@+id/textSenderInitial"
        app:layout_constraintTop_toBottomOf="@+id/textSender" />

    <TextView
        android:id="@+id/textPreview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/secondary_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textSenderInitial"
        app:layout_constraintTop_toBottomOf="@+id/textSubject" />

    <TextView
        android:id="@+id/textTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/secondary_text"
        app:layout_constraintEnd_toStartOf="@+id/imgStar"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>