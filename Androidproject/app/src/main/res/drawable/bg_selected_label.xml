<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_activated="true">
        <shape>
            <solid android:color="@color/label_background_selected" />
            <corners android:bottomRightRadius="300dp" android:topRightRadius="250dp" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/pressed_background_color" />
            <corners android:bottomRightRadius="300dp" android:topRightRadius="250dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@android:color/transparent" />
            <corners android:bottomRightRadius="300dp" android:topRightRadius="250dp" />
        </shape>
    </item>
</selector>